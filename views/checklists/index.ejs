<%- include('../partials/header') %>
<div class="container">
    <br>
    <h2>Projects List</h2>
    <table class="table table-hover">
        <thead class="table-primary">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
                <th scope="col">Complete</th>
            </tr>
        </thead>
        <tbody>
            <% checklists.forEach(function(c) { %>
            <tr>
              <td>
                <a type="button" class="btn btn-light <% if (c.completed) { %>completed-project<% } %>" href="/checklists/<%= c.id %>">
                    <%= c.projectName %>
                </a>
            </td>
                <td>
                    <form>
                        <a class="btn btn-outline-warning" href="/checklists/<%= c.id %>/edit">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                    </form>
                </td>
                <td>
                    <form action="/checklists/<%= c.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger" type="submit">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </form>
                </td>
                <td>
                    <form action="/checklists/<%= c.id %>?_method=PUT" method="POST">
                        <button class="btn btn-outline-success" type="submit">
                            <i class="fa-solid fa-check"></i>
                        </button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>


<style>
  .completed-project {
    text-decoration: line-through;
}
</style>